{
  "version": 2,
  "buildCommand": "npm install && npm run build:frontend",
  "outputDirectory": "frontend/dist",
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "backend/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}
